<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:components="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="me.karavaillancourt.wheelofeats.DetailsFragment">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/results_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="10">

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:textSize="@dimen/results_restaurant_name_text_size"
            android:textStyle="bold"
            android:layout_weight="6" />

        <TextView
            android:id="@+id/restaurant_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/results_text_view_padding"
            android:textSize="@dimen/results_restaurant_address_text_size" />

        <TextView
            android:id="@+id/restaurant_distance"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="center"
            android:padding="@dimen/results_text_view_padding"
            android:textSize="@dimen/results_restaurant_distance_text_size" />

        <ImageButton
            android:id="@+id/open_in_maps_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_place_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/results_open_in_maps_btn_text"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/spin_again_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_redo_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spin_again_btn_text"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <me.karavaillancourt.wheelofeats.GIFView
            android:id="@+id/loading_wheel_gif"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            components:src="@drawable/wheel_animation">
        </me.karavaillancourt.wheelofeats.GIFView>
    </LinearLayout>

</RelativeLayout>
